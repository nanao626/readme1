<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@diary, url: '/diaries') do |f| %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :content %>
 
    <%= f.submit '投稿' %>
 
<% end %>
<%= link_to '日記をかく', new_diary_path %>

<%= month_calendar events: @diary do |date, diary| %>
  <%= date.day %>

  <% diary.each do |diary| %>
    <div>
      <%= link_to diary.title, diary %>
    </div>
  <% end %>
<% end %>
